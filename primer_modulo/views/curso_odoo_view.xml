<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="curso_odoo_view_form">
            <field name="name">primer_modulo.curso.odoo.form</field>
            <field name="model">curso.odoo</field>
            <field name="arch" type="xml">
                <form string="Curso Odoo Form">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="level"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>

                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="curso_odoo_view_list">
            <field name="name" >curso.odoo.list</field>
            <field name="model">curso.odoo</field>
            <field name="arch" type="xml">
                <tree string="Curso Odoo List">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="level"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="curso_odoo_view_search">
            <field name="name">curso.odoo.search</field>
            <field name="model">curso.odoo</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="level"/>
                </search>
            </field>
        </record>
    </data>
</odoo>