<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="biblioteca_libro_view_form">
            <field name="name">biblioteca.biblioteca.libro.form</field>
            <field name="model">biblioteca.libro</field>
            <field name="arch" type="xml">
                <form string="Creaccion De Libro">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="autor"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="editor"/>
                            </group>
                            <group>
                                <field name="editorial"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="year_edicion"/>
                            </group>
                            <group>
                                <field name="genero"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>

                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="biblioteca_libro_view_list">
            <field name="name" >biblioteca.libro.list</field>
            <field name="model">biblioteca.libro</field>
            <field name="arch" type="xml">
                <tree string="Curso Odoo List">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="autor"/>
                    <field name="editor"/>
                    <field name="editorial"/>
                    <field name="year_edicion"/>
                    <field name="genero"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="biblioteca_libro_view_search">
            <field name="name">biblioteca.libro.search</field>
            <field name="model">biblioteca.libro</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="autor"/>
                    <field name="editor"/>
                    <field name="editorial"/>
                    <field name="year_edicion"/>
                    <field name="genero"/>
                </search>
            </field>
        </record>
    </data>
</odoo>