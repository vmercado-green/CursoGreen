<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="biblioteca_category">
        <field name="name">Primer Modulo</field>
        <field name="sequence">1</field>
    </record>
    <record id="group_biblioteca_bibliotecario" model="res.groups">
        <field name="name">Biblioteca  / Bibliotecario</field>
        <field name="category_id" ref="biblioteca.biblioteca_category"/>
    </record>

    <record id="group_biblioteca_cliente" model="res.groups">
        <field name="name">Biblioteca  / Cliente</field>
        <field name="category_id" ref="biblioteca.biblioteca_category"/>
    </record>

    <record id="biblioteca_actualizar" model="ir.rule">
        <field name="name">Solo se puede actualizar la biblioteca/libro activos</field>
        <field name="perm_read" eval="0"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="1"/>
        <field name="domain_force">[('active','=',True)]</field>
        <field name="model_id" ref="model_biblioteca"/>
    </record>
</odoo>

