<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="group_biblioteca_bibliotecario" model="res.groups">
        <fiels name="name"> Biblioteca  / Bibliotecario </fiels>
    </record>

    <record id="biblioteca_actualizar" model="ir.rule">
        <field name="name">Solo se puede actualizar la biblioteca/libro activos</field>
        <field name="perm_read" eval="0"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="1"/>
        <field name="domain_force">[('active','=',True)]</field>
        <field name="model_id" ref="model_biblioteca"/>
    </record>
</odoo>

